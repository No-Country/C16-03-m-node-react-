{
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": [
        "eslint:recommended",
        "prettier"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "camelcase": "error",
        "func-style": [
            "error",
            "declaration",
            {
                "allowArrowFunctions": false
            }
        ],
        "prefer-arrow-callback": "off"
    }
}